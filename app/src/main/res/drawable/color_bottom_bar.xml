<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Основной цвет -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white2" /> <!-- Цвет фона -->
        </shape>
    </item>

    <!-- Косой срез справа -->
    <item
        android:right="0dp"
        android:left="0dp"
        android:top="0dp"
        android:bottom="-2000dp">
        <rotate
            android:fromDegrees="-50"
            android:pivotX="80%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="@color/yalow"/> <!-- Цвет среза -->
            </shape>
        </rotate>
    </item>
</layer-list>