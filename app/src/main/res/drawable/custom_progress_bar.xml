<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#D3D3D3"/> <!-- Цвет фона -->
            <corners android:radius="10dp"/> <!-- Закругленные углы -->
            <size android:height="10dp"/> <!-- Увеличиваем толщину фона -->
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <shape>
            <solid android:color="#4CAF50"/> <!-- Цвет прогресса -->
            <corners android:radius="10dp"/> <!-- Закругленные углы -->
            <size android:height="10dp"/> <!-- Увеличиваем толщину прогресса -->
        </shape>
    </item>
</layer-list>
