<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Шапка -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/color_tool_bar"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Иконка -->
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circle_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <!-- Ник -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Никнейм игрока"
                android:textColor="@color/gray"
                android:textSize="20sp" />

            <!-- LVL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv: 1"
                android:textColor="@color/gray"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Настройки -->
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_settings" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/my"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <!-- Игра 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFirstGame"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/yalow"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <!-- Информация игра 1 -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/info_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="X + Y = 17"
                        android:textColor="@color/gray"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <!-- Рекорд -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        android:text="рекорд: 18"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="15dp"
                    android:layout_height="0dp" />

                <!-- Игра 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/yalow"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <!-- Информация игра 2 -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/info_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2048"
                        android:textColor="@color/gray"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <!-- Рекорд -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        android:text="рекорд: 1387"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <!-- Игра 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/yalow"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <!-- Информация игра 3 -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/info_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="&gt; &lt; ="
                        android:textColor="@color/gray"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <!-- Рекорд -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        android:text="рекорд: 7"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="15dp"
                    android:layout_height="0dp" />

                <!-- Игра 4 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/yalow"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <!-- Информация игра 4 -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/info_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="X ? Y = C"
                        android:textColor="@color/gray"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <!-- Рекорд -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        android:text="рекорд: 37"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <!-- Игра 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/yalow"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <!-- Информация игра 5 -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/info_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="X + X = 2X"
                        android:textColor="@color/gray"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <!-- Рекорд -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        android:text="рекорд: 3"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="15dp"
                    android:layout_height="0dp" />

                <!-- Игра 6 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/yalow"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <!-- Информация игра 6 -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/info_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="\?"
                        android:textColor="@color/gray"
                        android:textSize="70sp"
                        android:textStyle="bold" />

                    <!-- Рекорд -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        android:text="рекорд: 18"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/my"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:elevation="90dp"
        android:background="@drawable/color_bottom_bar"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardCornerRadius="20dp"
            android:elevation="4dp"
            android:backgroundTint="@color/gray"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:text="LVL"
                    android:textColor="@color/white"/>

                <!-- LVL -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="1"/>

                <!-- Прогресс уровня -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:max="100"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="19dp"
                    android:layout_weight="1"
                    android:progress="50"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>