<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GameFirstActivity">

    <!-- Шапка -->
    <LinearLayout
        android:id="@+id/headLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/color_tool_bar"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginStart="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="35sp"
                android:textStyle="bold"
                android:text="Уровень"/>

            <TextView
                android:id="@+id/levelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="1"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/gray"
                android:gravity="center" />

        </LinearLayout>

        <!-- Назад -->
        <ImageButton
            android:id="@+id/functional_header_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_list"
            tools:ignore="ContentDescription" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/timeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/headLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:text="Время:"
                android:textSize="33sp"
                android:textStyle="bold"
                android:textColor="@color/gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:text="01:00"
                android:textSize="33sp"
                android:textStyle="bold"
                android:textColor="@color/gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Лучшее:"
                android:textSize="15sp"
                android:textColor="@color/gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:text="01:30"
                android:textSize="15sp"
                android:textColor="@color/gray"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mathematicalExample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/timeLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X + Y = 17"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:textSize="55sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/mathematicalExample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/button_game1"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="55sp"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:background="@drawable/button_game1"
                android:layout_weight="1"
                android:text="7"
                android:textSize="55sp"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:background="@drawable/button_game1"
                android:layout_weight="1"
                android:text="6"
                android:textSize="55sp"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/button_game1"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="55sp"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:background="@drawable/button_game1"
                android:layout_weight="1"
                android:text="2"
                android:textSize="55sp"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:background="@drawable/button_game1"
                android:layout_weight="1"
                android:text="1"
                android:textSize="55sp"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/button_game1"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="55sp"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:background="@drawable/button_game1"
                android:layout_weight="1"
                android:text="0"
                android:textSize="55sp"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:background="@drawable/button_game1"
                android:layout_weight="1"
                android:text="3"
                android:textSize="55sp"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>